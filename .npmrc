# pnpm configuration
# Use hoisted node_modules for Expo/React Native compatibility
node-linker=hoisted

# Automatically install peer dependencies
auto-install-peers=true

# Don't fail on peer dependency issues (common with React Native)
strict-peer-dependencies=false

# Trust certain packages to run build scripts
onlyBuiltDependenciesFile=.pnpm-trusted

# Don't install canvas (optional native dep that breaks on some platforms)
public-hoist-pattern[]=!canvas
