{
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/**/types/**",
    "src/app/**/route.ts",
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/instrumentation.ts"
  ],
  "reporter": ["text", "text-summary", "html", "lcov"],
  "report-dir": "./coverage",
  "all": true
}
