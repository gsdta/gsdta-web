# Development Dockerfile for API
FROM node:20-alpine

# Install dependencies for development
RUN apk add --no-cache libc6-compat curl

WORKDIR /app

# Copy package files
COPY package.json ./

# Install all dependencies (use npm install for workspaces without lock file)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Set environment
ENV NODE_ENV=development

# Start development server
CMD ["npm", "run", "dev"]
