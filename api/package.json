{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "build": "next build",
    "build:test": "cross-env USE_TEST_AUTH=true ALLOW_TEST_INVITES=1 NODE_ENV=test next build",
    "start": "next start -p 8080",
    "start:standalone": "node .next/standalone/server.js",
    "serve": "pnpm build && pnpm start",
    "serve:test": "pnpm build:test && cross-env USE_TEST_AUTH=true ALLOW_TEST_INVITES=1 NODE_ENV=test next start -p 8080",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "node --import tsx --test $(find src -name '*.test.ts' -type f)",
    "test:coverage": "c8 --check-coverage --lines 95 --functions 95 --branches 85 --statements 95 node --import tsx --test $(find src -name '*.test.ts' -type f)",
    "test:cucumber": "cross-env TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js",
    "test:e2e": "cross-env FIRESTORE_EMULATOR_HOST=localhost:8889 FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 start-server-and-test \"pnpm serve:test\" http://localhost:8080/api/v1/health \"pnpm test:cucumber\"",
    "test:e2e:seed": "pnpm seed:emulator && pnpm test:e2e",
    "seed:emulator": "node ../scripts/seed-emulator.js"
  },
  "dependencies": {
    "firebase-admin": "^13.6.0",
    "next": "15.5.9",
    "papaparse": "^5.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "swagger-jsdoc": "^6.2.8",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@types/node": "^20.19.27",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.5.9",
    "start-server-and-test": "^2.1.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  }
}
