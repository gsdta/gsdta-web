{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "build": "next build",
    "build:test": "cross-env ALLOW_TEST_INVITES=1 NODE_ENV=test next build",
    "start": "next start -p 8080",
    "start:standalone": "node .next/standalone/server.js",
    "serve": "npm run build && npm run start",
    "serve:test": "npm run build:test && cross-env USE_TEST_AUTH=true ALLOW_TEST_INVITES=1 NODE_ENV=test next start -p 8080",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "node --import tsx --test $(find src -name '*.test.ts' -type f)",
    "test:cucumber": "cross-env TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js",
    "test:e2e": "cross-env FIRESTORE_EMULATOR_HOST=localhost:8889 FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 start-server-and-test \"npm run serve:test\" http://localhost:8080/api/v1/health \"npm run test:cucumber\"",
    "test:e2e:seed": "npm run seed:emulator && npm run test:e2e",
    "seed:emulator": "node ../scripts/seed-emulator.js"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "swagger-jsdoc": "^6.2.8",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "start-server-and-test": "^2.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.3"
  }
}
