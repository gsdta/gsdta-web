# UAT Environment Configuration
# Copy this file to .env and fill in the values

# Base URL for UAT tests (QA environment)
UAT_BASE_URL=https://app.qa.example.com

# Firebase Configuration (QA project)
# Get these values from your Firebase Console > Project Settings > Your Apps
FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Browser Settings (optional)
HEADLESS=true
SLOW_MO=0

# ============================================
# PRIMARY TEST USERS (used by test scripts)
# Create these users in your Firebase Auth
# ============================================

# Admin User (regular admin)
UAT_ADMIN_EMAIL=admin-uat@example.com
UAT_ADMIN_PASSWORD=YOUR_SECURE_PASSWORD

# Super Admin User
UAT_SUPER_ADMIN_EMAIL=superadmin-uat@example.com
UAT_SUPER_ADMIN_PASSWORD=YOUR_SECURE_PASSWORD

# Teacher User
UAT_TEACHER_EMAIL=teacher-uat@example.com
UAT_TEACHER_PASSWORD=YOUR_SECURE_PASSWORD

# Parent User (primary parent for tests)
UAT_PARENT_EMAIL=parent1-uat@example.com
UAT_PARENT_PASSWORD=YOUR_SECURE_PASSWORD

# ============================================
# ADDITIONAL SINGLE ROLE USERS
# ============================================

# Super Admin (with UID)
UAT_SUPERADMIN_EMAIL=superadmin-uat@example.com
UAT_SUPERADMIN_PASSWORD=YOUR_SECURE_PASSWORD
UAT_SUPERADMIN_UID=uat-super-admin

# Teacher (with UID)
UAT_TEACHER_UID=uat-teacher-1

# Parent 1 (5 children: UAT Student 1-5)
UAT_PARENT1_EMAIL=parent1-uat@example.com
UAT_PARENT1_PASSWORD=YOUR_SECURE_PASSWORD
UAT_PARENT1_UID=uat-parent-1

# Parent 2 (5 children: UAT Student 6-10)
UAT_PARENT2_EMAIL=parent2-uat@example.com
UAT_PARENT2_PASSWORD=YOUR_SECURE_PASSWORD
UAT_PARENT2_UID=uat-parent-2

# ============================================
# MULTI-ROLE USERS (for role switching tests)
# ============================================

# Parent + Teacher
UAT_PARENT_TEACHER_EMAIL=parent-teacher-uat@example.com
UAT_PARENT_TEACHER_PASSWORD=YOUR_SECURE_PASSWORD
UAT_PARENT_TEACHER_UID=uat-parent-teacher

# Parent + Admin
UAT_PARENT_ADMIN_EMAIL=parent-admin-uat@example.com
UAT_PARENT_ADMIN_PASSWORD=YOUR_SECURE_PASSWORD
UAT_PARENT_ADMIN_UID=uat-parent-admin

# Teacher + Admin
UAT_TEACHER_ADMIN_EMAIL=teacher-admin-uat@example.com
UAT_TEACHER_ADMIN_PASSWORD=YOUR_SECURE_PASSWORD
UAT_TEACHER_ADMIN_UID=uat-teacher-admin

# All Roles (super_admin + admin + teacher + parent)
UAT_ALL_ROLES_EMAIL=allroles-uat@example.com
UAT_ALL_ROLES_PASSWORD=YOUR_SECURE_PASSWORD
UAT_ALL_ROLES_UID=uat-all-roles

# ============================================
# TEST DATA
# ============================================

# UAT Class
UAT_CLASS_ID="class-grade-3-sat"
UAT_CLASS_NAME="Grade 3 - Saturday AM"
