{
  "name": "uat",
  "version": "1.0.0",
  "description": "UAT tests for GSDTA Web Application",
  "private": true,
  "scripts": {
    "test": "cucumber-js",
    "test:smoke": "cucumber-js --tags @smoke",
    "test:admin": "cucumber-js --tags @admin",
    "test:teacher": "cucumber-js --tags @teacher",
    "test:parent": "cucumber-js --tags @parent",
    "test:auth": "cucumber-js --tags @auth",
    "test:public": "cucumber-js --tags @public",
    "test:parallel": "cucumber-js --parallel 4",
    "test:ci": "cucumber-js --profile ci",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@playwright/test": "1.56.1",
    "playwright": "1.56.1",
    "firebase": "^11.9.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.0.0",
    "@types/node": "^20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.3"
  }
}
