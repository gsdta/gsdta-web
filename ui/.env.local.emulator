# Local Development with Firebase Emulators
NODE_ENV=development
NEXT_PUBLIC_AUTH_MODE=firebase
NEXT_PUBLIC_USE_MSW=false
NEXT_PUBLIC_API_BASE_URL=/api

# Firebase Emulator Config (demo project - use valid format for emulator)
# For emulators, we need a valid-looking key format
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSyDemoKeyForLocalDevelopment123456789
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=localhost
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-gsdta
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:demo-app-id

# Emulator Hosts (client-side connection)
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
NEXT_PUBLIC_FIRESTORE_EMULATOR_HOST=localhost:8889

# Optional: Skip email verification for faster local testing
NEXT_PUBLIC_SKIP_EMAIL_VERIFICATION=true

# Site URL for local development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
