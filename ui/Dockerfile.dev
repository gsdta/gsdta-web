# Development Dockerfile for hot reloading
FROM node:20-alpine

# Install dependencies for development
RUN apk add --no-cache libc6-compat curl

WORKDIR /workspace

# Copy root package.json for workspaces config
COPY package.json package-lock.json ./

# Copy workspace packages
COPY packages ./packages

# Copy UI package files
COPY ui/package.json ui/package-lock.json ./ui/

# Copy scripts directory BEFORE npm install (needed for postinstall)
COPY ui/scripts ./ui/scripts

# Install all dependencies using npm workspaces
RUN npm install --workspace=ui

# Ensure correct platform-specific native binaries for Alpine Linux (musl)
# npm may skip optional dependencies, so we explicitly install the musl binary
RUN npm install @tailwindcss/oxide-linux-arm64-musl --workspace=ui --save-optional 2>/dev/null || \
    npm install @tailwindcss/oxide-linux-x64-musl --workspace=ui --save-optional 2>/dev/null || true

# Set working directory to ui
WORKDIR /workspace/ui

# Copy UI source code
COPY ui/ .

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=development

# Start development server
CMD ["npm", "run", "dev"]
