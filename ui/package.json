{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "postinstall": "node scripts/copy-pdf-worker.mjs",
    "prebuild": "node scripts/copy-pdf-worker.mjs",
    "build": "next build",
    "start": "next start",
    "start:e2e": "pnpm build && pnpm start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.cjs --passWithNoTests",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:watch": "jest --config jest.config.cjs --watch",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed --browser=chromium",
    "pw:install": "playwright install chromium",
    "e2e:ci": "pnpm test:e2e",
    "docker:build": "docker build -t gsdta-ui:latest .",
    "docker:build-dev": "docker build -f Dockerfile.dev -t gsdta-ui:dev .",
    "docker:run": "docker-compose up -d ui",
    "docker:run-dev": "docker-compose --profile dev up -d ui-dev",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down --rmi all --volumes --remove-orphans",
    "generate:thirukkural": "node scripts/generate-thirukkural.js",
    "ensure:native": "node scripts/ensure-native-binaries.mjs"
  },
  "dependencies": {
    "@gsdta/shared-core": "workspace:*",
    "@gsdta/shared-firebase": "workspace:*",
    "@hookform/resolvers": "^5.2.2",
    "@react-pdf-viewer/core": "^3.12.0",
    "firebase": "^11.10.0",
    "next": "15.5.9",
    "pdfjs-dist": "^3.11.174",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.70.0",
    "recharts": "^3.6.0",
    "xlsx": "^0.18.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.5.9",
    "eslint-config-prettier": "^9.1.2",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "msw": "^2.12.7",
    "playwright": "^1.56.1",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
